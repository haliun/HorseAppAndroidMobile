<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:fab="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.dovchin.horseapplication1.methods.AddOlympActivity">

    <TextView
        android:id="@+id/textView93"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/textView72"
        android:layout_alignBottom="@+id/textView72"
        android:layout_alignEnd="@+id/textView77"
        android:layout_alignRight="@+id/textView77"
        android:text="*"
        android:textColor="@android:color/holo_red_dark"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textView92"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="*"
        android:textColor="@android:color/holo_red_dark"
        android:textStyle="bold"
        android:layout_alignTop="@+id/textView76"
        android:layout_toEndOf="@+id/textView76" />

    <TextView
        android:id="@+id/textView66"
        android:layout_width="221dp"
        android:layout_height="52dp"
        android:layout_alignBottom="@+id/imageView14"
        android:layout_alignStart="@+id/textView93"
        android:layout_marginLeft="14dp"
        android:layout_toEndOf="@+id/textView92"
        android:text="Уралдаан "
        android:textColor="@color/colorPrimaryDark"
        android:textSize="22sp"
        android:textStyle="bold"
        app:layout_constraintHorizontal_bias="0.504"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView72"
        android:layout_width="79dp"
        android:layout_height="31dp"
        android:layout_alignEnd="@+id/imageView14"
        android:layout_below="@+id/imageView14"
        android:layout_marginTop="18dp"
        android:text="Нэр:"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView74"
        android:layout_width="77dp"
        android:layout_height="36dp"
        android:layout_alignEnd="@+id/textView80"
        android:layout_alignRight="@+id/textView80"
        android:layout_alignStart="@+id/textView72"
        android:layout_below="@+id/textView72"
        android:layout_marginTop="9dp"
        android:text="Төрөл:"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintLeft_toLeftOf="parent"
        tools:layout_editor_absoluteY="106dp" />

    <TextView
        android:id="@+id/textView76"
        android:layout_width="92dp"
        android:layout_height="40dp"
        android:layout_alignLeft="@+id/textView72"
        android:layout_alignStart="@+id/textView72"
        android:layout_below="@+id/textView77"
        android:text="Явагдсан огноо:"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintLeft_toLeftOf="parent"
        tools:layout_editor_absoluteY="140dp" />

    <TextView
        android:id="@+id/textView77"
        android:layout_width="90dp"
        android:layout_height="41dp"
        android:layout_alignLeft="@+id/textView74"
        android:layout_alignStart="@+id/textView74"
        android:layout_below="@+id/textView74"
        android:layout_marginBottom="5dp"
        android:text="Явагдсан газар:"
        android:textSize="16sp"
        android:textStyle="bold"
        tools:layout_editor_absoluteX="38dp"
        tools:layout_editor_absoluteY="198dp" />

    <TextView
        android:id="@+id/textView78"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Ангилал:"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintLeft_toLeftOf="parent"
        tools:layout_editor_absoluteY="245dp"
        android:layout_centerVertical="true"
        android:layout_alignStart="@+id/textView76" />

    <TextView
        android:id="@+id/textView79"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Оролцон адууны тоо:"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintLeft_toLeftOf="parent"
        tools:layout_editor_absoluteY="274dp"
        android:layout_below="@+id/editTextOlympCat"
        android:layout_alignStart="@+id/textView78"
        android:layout_alignEnd="@+id/textView92" />

    <TextView
        android:id="@+id/textView80"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/textView78"
        android:layout_below="@+id/editTextOlympNumb"
        android:layout_marginTop="18dp"
        android:text="Тайлбар:"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintLeft_toLeftOf="parent"
        tools:layout_editor_absoluteY="304dp" />

    <EditText
        android:id="@+id/editTextOlympName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="text"
        android:textAppearance="@style/TextAppearance.AppCompat"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_alignBaseline="@+id/textView93"
        android:layout_alignBottom="@+id/textView93"
        android:layout_alignStart="@+id/spinnerOlymp"
        android:layout_alignEnd="@+id/textView66" />

    <Spinner
        android:id="@+id/spinnerOlymp"
        android:layout_width="205dp"
        android:layout_height="34dp"
        android:layout_alignTop="@+id/textView74"
        android:layout_marginBottom="5dp"
        android:spinnerMode="dialog"
        app:layout_constraintRight_toRightOf="parent"
        tools:layout_editor_absoluteX="139dp"
        tools:layout_editor_absoluteY="106dp"
        android:layout_alignEnd="@+id/textView66" />

    <EditText
        android:id="@+id/editTextOlympDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="text"
        android:textSize="12sp"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        tools:layout_editor_absoluteY="146dp"
        android:layout_alignTop="@+id/textView76"
        android:layout_alignStart="@+id/editTextOlympPlace"
        android:layout_toStartOf="@+id/buttonOLDdate" />

    <EditText
        android:id="@+id/editTextOlympPlace"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:inputType="text"
        android:textSize="12sp"
        app:layout_constraintRight_toRightOf="parent"
        tools:layout_editor_absoluteY="198dp"
        android:layout_alignBottom="@+id/textView77"
        android:layout_alignStart="@+id/spinnerOlymp"
        android:layout_alignEnd="@+id/spinnerOlymp" />

    <EditText
        android:id="@+id/editTextOlympCat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_alignEnd="@+id/editTextOlympPlace"
        android:layout_marginBottom="5dp"
        android:layout_toEndOf="@+id/textView77"
        android:inputType="textPersonName"
        android:textSize="12sp"
        app:layout_constraintRight_toRightOf="parent"
        tools:layout_editor_absoluteY="234dp"
        android:layout_alignStart="@+id/editTextOlympDate"
        android:layout_below="@+id/textView76" />

    <EditText
        android:id="@+id/editTextOlympNumb"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_alignBaseline="@+id/textView79"
        android:layout_alignBottom="@+id/textView79"
        android:layout_alignEnd="@+id/editTextOlympCat"
        android:layout_alignStart="@+id/editTextOlympDate"
        android:layout_marginBottom="5dp"
        android:inputType="number"
        android:textSize="12sp"
        app:layout_constraintRight_toRightOf="parent"
        tools:layout_editor_absoluteY="272dp" />

    <EditText
        android:id="@+id/editTextOlympDesc"
        android:layout_width="205dp"
        android:layout_height="86dp"

        android:layout_alignStart="@+id/editTextOlympNumb"
        android:layout_below="@+id/editTextOlympNumb"
        android:layout_marginBottom="5dp"
        android:inputType="textLongMessage"
        android:textSize="12sp"
        app:layout_constraintRight_toRightOf="parent"
        tools:layout_editor_absoluteY="304dp" />

    <Button
        android:id="@+id/buttonOLDdate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/editTextOlympCat"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/editTextOlympPlace"
        android:background="@null"
        android:text="Огноо"
        android:textColor="@color/colorAccent"
        app:layout_constraintRight_toRightOf="parent"
        tools:layout_editor_absoluteY="146dp" />

    <com.github.clans.fab.FloatingActionButton
        android:id="@+id/floatingActionButtonOsave"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:clickable="true"
        app:fabSize="mini"
        app:layout_constraintRight_toRightOf="parent"
        android:src="@drawable/fab_add"
        fab:fab_colorNormal="#eddc4537"
        fab:fab_colorPressed="#dd5245"
        fab:fab_colorRipple="#dd5346"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_below="@+id/editTextOlympDesc"
        android:layout_alignParentEnd="true" />

    <ImageView
        android:id="@+id/imageView14"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginLeft="16dp"
        android:layout_marginStart="41dp"
        android:layout_marginTop="23dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/olympics"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />
    <android.support.design.widget.BottomNavigationView

        android:id="@+id/bottom_navigation_menu"

        android:layout_width="match_parent"

        android:layout_height="wrap_content"

        android:layout_alignParentBottom="true"

        app:itemBackground="@color/colorPrimaryDark"

        app:itemIconTint="@android:color/white"

        app:itemTextColor="@android:color/white"

        app:menu="@menu/bottom_navigation_menu"
        />
</RelativeLayout>

<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <android.support.v7.widget.CardView
        android:id="@+id/cardView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/cardView">

            <TextView
                android:id="@+id/textView75"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/textViewOlymp_name_row"
                android:layout_marginLeft="45dp"
                android:layout_marginStart="45dp"
                android:layout_marginTop="7dp"
                android:text="Огноо:"
                android:textColor="@color/bg_screen1"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textViewOlymp_name_row"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@+id/textView73"
                android:layout_alignBottom="@+id/textView73"
                android:layout_marginLeft="24dp"
                android:layout_marginStart="24dp"
                android:layout_toEndOf="@+id/textView73"
                android:layout_toRightOf="@+id/textView73"
                android:text="TextView" />

            <TextView
                android:id="@+id/textView73"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginLeft="43dp"
                android:layout_marginStart="43dp"
                android:layout_marginTop="9dp"
                android:text="Нэр:"
                android:textColor="@color/bg_screen1"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textViewOlymp_date_row"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@+id/textView75"
                android:layout_alignBottom="@+id/textView75"
                android:layout_alignLeft="@+id/textViewOlymp_name_row"
                android:layout_alignStart="@+id/textViewOlymp_name_row"
                android:text="TextView" />
        </RelativeLayout>
    </android.support.v7.widget.CardView>

</RelativeLayout>
<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Шинээр нэмэх талбар "
        android:id="@+id/textView14"
        android:layout_gravity="center_horizontal"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView22"
        android:layout_below="@+id/textView14"
        android:layout_centerHorizontal="true"
        android:text="Та Азарга, Морь, Гүү, Унага зэргээс сонголтоо хийн нэмнэ үү!" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Азарга нэмэх "
        android:id="@+id/button19"
        android:layout_below="@+id/textView22"
        android:layout_alignLeft="@+id/button20"
        android:layout_alignStart="@+id/button20"
        android:onClick="addAzarga" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Морь нэмэх "
        android:id="@+id/button20"
        android:layout_below="@+id/button19"
        android:layout_centerHorizontal="true"
        android:onClick="addMori" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Гүү нэмэх "
        android:id="@+id/button21"
        android:layout_below="@+id/button20"
        android:layout_alignLeft="@+id/button20"
        android:layout_alignStart="@+id/button20" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Унага нэмэх "
        android:id="@+id/button22"
        android:layout_below="@+id/button21"
        android:layout_alignLeft="@+id/button21"
        android:layout_alignStart="@+id/button21" />
</RelativeLayout>
<android.support.design.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:fab="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/viewA"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="0.65"
            android:background="@color/dot_light_screen3"
            android:orientation="horizontal"
            android:weightSum="1">

            <com.mikhaellopez.circularimageview.CircularImageView
                android:id="@+id/circularImageView3"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentBottom="true"
                android:layout_alignParentStart="true"
                android:layout_marginStart="81dp"
                android:foregroundGravity="center"
                android:src="@drawable/user"
                app:civ_border_color="#EEEEEE"
                app:civ_border_width="4dp"
                app:civ_shadow="true"
                app:civ_shadow_color="#8BC34A"
                app:civ_shadow_radius="10" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/viewB"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="0.35"

            android:orientation="horizontal"
            android:paddingRight="5dp">


            <TextView
                android:id="@+id/textView36"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:layout_alignParentStart="true"
                android:layout_below="@+id/not_male"
                android:layout_marginBottom="10dp"
                android:layout_marginStart="27dp"
                android:layout_marginTop="16dp"
                android:fontFamily="sans-serif-condensed"
                android:inputType="text"
                android:text="@string/lastname"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="20sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textView37"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignStart="@+id/textView36"
                android:layout_below="@+id/textView36"
                android:layout_marginBottom="10dp"
                android:fontFamily="sans-serif-condensed"
                android:text="@string/firstname"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="20sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textView38"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/textView37"
                android:layout_alignStart="@+id/textView37"
                android:layout_below="@+id/textView37"
                android:layout_marginBottom="10dp"
                android:fontFamily="sans-serif-condensed"
                android:text="@string/email"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="20sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textView39"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/textView38"
                android:layout_alignStart="@+id/textView38"
                android:layout_below="@+id/textView38"
                android:layout_marginBottom="10dp"
                android:fontFamily="sans-serif-condensed"
                android:text="@string/aimag"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="20sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textView40"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignStart="@+id/textView39"
                android:layout_below="@+id/textView39"
                android:layout_marginRight="15dp"
                android:fontFamily="sans-serif-condensed"
                android:text="@string/sum"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="20sp"
                android:textStyle="bold" />


            <Button
                android:id="@+id/button_edit_user"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignParentEnd="true"
                android:layout_marginBottom="10dp"
                android:layout_marginRight="15dp"
                android:background="@null"
                android:text="Засах"
                android:textColor="@color/colorAccent"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/badge_notification_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/not_stal"
                android:layout_toEndOf="@+id/not_stal"
                android:background="@drawable/item_count"
                android:text="0"
                android:textColor="#FFF"
                android:textSize="16sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/not_male"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignStart="@+id/textView36"
                android:layout_below="@+id/not_stal"
                android:layout_marginStart="13dp"
                android:layout_marginTop="14dp"
                android:background="@drawable/button_blue"
                android:elevation="4dp"
                android:paddingLeft="5dp"
                android:paddingRight="10dp"
                android:text="Морь"
                android:textAllCaps="true"
                android:textAppearance="@style/TextAppearance.AppCompat"
                android:textColor="#fff" />

            <TextView
                android:id="@+id/badge_notification_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignEnd="@+id/badge_notification_1"
                android:layout_alignTop="@+id/not_male"
                android:background="@drawable/item_count"
                android:text="0"
                android:textColor="#FFF"
                android:textSize="16sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/not_colt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignStart="@+id/not_female"
                android:layout_alignTop="@+id/badge_notification_3"
                android:background="@drawable/button_blue"
                android:elevation="4dp"
                android:text="Унага "
                android:textColor="#fff"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/badge_notification_3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/not_male"
                android:layout_toEndOf="@+id/not_colt"
                android:background="@drawable/item_count"
                android:text="0"
                android:textColor="#FFF"
                android:textSize="16sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/not_female"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_toEndOf="@+id/textView153"
                android:background="@drawable/button_blue"
                android:elevation="4dp"
                android:text="Гүү "
                android:textColor="#fff"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/badge_notification_4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/not_female"
                android:layout_toEndOf="@+id/not_colt"
                android:background="@drawable/item_count"
                android:text="0"
                android:textColor="#FFF"
                android:textSize="16sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/not_stal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@+id/not_female"
                android:layout_alignBottom="@+id/not_female"
                android:layout_alignStart="@+id/not_male"
                android:background="@drawable/button_blue"
                android:elevation="4dp"
                android:text="Азарга"
                android:textColor="#fff"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/textView153"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="TextView"
                android:textAppearance="@style/TextAppearance.AppCompat"
                android:textSize="18sp"
                android:textStyle="bold"
                android:layout_alignBottom="@+id/textView36"
                android:layout_toEndOf="@+id/textView40" />

            <TextView
                android:id="@+id/textView154"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/textView37"
                android:layout_alignStart="@+id/textView153"
                android:text="TextView"
                android:textAppearance="@style/TextAppearance.AppCompat"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textView155"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/textView38"
                android:layout_alignStart="@+id/textView154"
                android:text="TextView"
                android:textAppearance="@style/TextAppearance.AppCompat"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textView157"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignStart="@+id/textView155"
                android:layout_alignTop="@+id/textView39"
                android:text="TextView"
                android:textAppearance="@style/TextAppearance.AppCompat"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textView159"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignStart="@+id/textView157"
                android:layout_alignTop="@+id/textView40"
                android:text="TextView"
                android:textAppearance="@style/TextAppearance.AppCompat"
                android:textSize="18sp"
                android:textStyle="bold" />


        </RelativeLayout>

    </LinearLayout>


</android.support.design.widget.CoordinatorLayout>